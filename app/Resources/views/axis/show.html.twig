{% extends 'base.html.twig' %}

{% block body %}
    <h1>Axi</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ axi.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ axi.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ axi.description }}</td>
            </tr>
            <tr>
                <th>Groupe</th>
                <td>{{ axi.groupe }}</td>
            </tr>
            <tr>
                <th>Iscalculated</th>
                <td>{% if axi.iscalculated %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Formula</th>
                <td>{{ axi.formula }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('axis_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('axis_edit', { 'id': axi.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
