
    <table id="nodeid" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Level</th>
                <th>Port√©e d'analyse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for node in nodes %}
            <tr>
                <td>{{ node.name }}</td>
                <td>{{ node.description }}</td>
                <td>{{ node.level }}</td>
                <td>{{ node.isScopeAnalyse }}</td>
                <td>
                    <a class="btn btn-success btn-sm" onclick="updateNode('{{ node.id }}')"><i class="glyphicon glyphicon-pencil"></i></a>
                </td>
            </tr>
            <div class="modal fade" id="frmUpdateNode{{ node.id }}" tabindex="-1" role="dialog" type_operationaria-labelledby="frmAxeModal" aria-hidden="true" >
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="box-header well" data-original-title="">
                                <h2 style="margin-top: 0px;font-size: 18px"><i class="glyphicon glyphicon-edit"></i> Modifier un noeud </h2>
                                <div class="box-icon" style="float: right; margin-top: -34px">
                                    <a style="padding: 5px; border-radius: 50px" href="#" id="closeScope" class="btn btn-close btn-round btn-default" data-dismiss="modal" aria-hidden="true">
                                        <i class="glyphicon glyphicon-remove"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="box">
                                <div class="box-inner">
                                    <div class="box-content" id="contentModalNode{{ node.id }}">
                                    </div>
                                    <img style="width: 50%; margin-left: auto; margin-right: auto; display: block" src="{{ asset('img/ajax-loader.gif') }}" alt="loading"   id="editloading{{ node.id }}">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </tbody>
    </table>
    <script>
        $("#nodeid").DataTable();
    </script>