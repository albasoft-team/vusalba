{% extends 'base.html.twig' %}

{% block body %}
    <h1>Node</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ node.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ node.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ node.description }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ node.level }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('node_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('node_edit', { 'id': node.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
