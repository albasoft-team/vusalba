                <td>{% if composant.groupe %}{{ composant.groupe.name }}{% endif %}</td>
                <td>
                        {#<li>#}
                            {#<a href="{{ path('composant_show', { 'id': composant.id }) }}"><i ></i></a>#}
                        {#</li>#}
                        <a class="btn btn-success btn-sm" href="{{ path('composant_edit', { 'id': composant.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>
        $("#example1").DataTable();
    </script>